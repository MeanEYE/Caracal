<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<!-- Window Menu -->
	<nav class="window">
		<cms:var name="$params['link_new']"/>
	</nav>

	<!-- Header -->
	<div class="scrollable_list">
		<div class="list_header">
			<span class="column" style="width: 70px;">
				<cms:text constant="column_id" module="downloads"/>
			</span>
			<span class="column" style="width: 150px;">
				<cms:text constant="column_name" module="downloads"/>
			</span>
			<span class="column" style="width: 70px;">
				<cms:text constant="column_size" module="downloads"/>
			</span>
			<span class="column" style="width: 70px;">
				<cms:text constant="column_downloads" module="downloads"/>
			</span>
			<span class="column">
				<cms:text constant="column_options"/>
			</span>
		</div>
		<div class="list_content" style="height: 250px">
			<!-- List Content -->
			<_downloads_list/>
		</div>
	</div>
</document>
