<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<!-- Search interface -->
	<nav class="window">
		<form
			action="$params['form_action']"
			method="post"
			style="margin-bottom: 10px;"
			cms:eval="action"
			>
			<label class="inline">
				<span><cms:text constant="label_search" module="page_description"/></span>
				<input
					type="search"
					name="query"
					value="isset($_REQUEST['query']) ? escape_chars($_REQUEST['query']) : false"
					cms:optional="value"
					/>
				<button type="submit"><cms:text constant="search"/></button>
			</label>
		</form>
	</nav>

	<table class="list" data-height="300">
		<!-- Header -->
		<thead>
			<tr>
				<td style="width: 400px;">
					<cms:text constant="column_url" module="page_description"/>
				</td>
				<td style="width: 50px; text-align: center;">
					<cms:text constant="column_done" module="page_description"/>
				</td>
				<td>
					<cms:text constant="column_options"/>
				</td>
			</tr>
		</thead>

		<!-- List Content -->
		<tbody>
			<cms:list/>
		</tbody>
	</table>
</document>
