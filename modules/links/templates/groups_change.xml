<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST" id="links_group_change_form">
		<input type="hidden" name="id" value="$params['id']" cms:eval="value"/>
		<label>
			<span><cms:text constant="label_name" module="links"/></span>
			<input
				type="text"
				name="name"
				class="multi-language"
				style="width: 360px;"
				maxlength="50"
				/>
			<cms:language_data param="name"/>
		</label>
		<label>
			<span><cms:text constant="label_text_id" module="links"/></span>
			<input
				type="text"
				name="text_id"
				value="$params['text_id']"
				style="width: 200px;"
				maxlength="32"
				cms:eval="value"
				class="code"
			/>
		</label>
		<div class="button_bar">
			<button type="submit"><cms:text constant="save"/></button>
			<button type="reset"><cms:text constant="reset"/></button>
		</div>
	</form>
	<script type="text/javascript" charset="utf-8">
		new LanguageSelector('links_group_change_form');
	</script>
</document>
