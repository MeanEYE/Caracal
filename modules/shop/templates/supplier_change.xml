<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form action="$params['form_action']" cms:eval="action" method="POST">
		<input
			type="hidden"
			name="id"
			value="$params['id']"
			cms:eval="value"
			/>
		<label>
			<span><cms:text constant="label_supplier_name" module="shop"/></span>
			<input
				type="text"
				name="name"
				maxlength="100"
				value="$params['name']"
				cms:eval="value"
				/>
		</label>

		<label>
			<span><cms:text constant="label_phone_number" module="shop"/></span>
			<input
				type="text"
				name="phone"
				class="code"
				style="min-width: 270px;"
				maxlength="100"
				value="$params['phone']"
				cms:eval="value"
				/>
		</label>

		<label>
			<span><cms:text constant="label_email" module="shop"/></span>
			<input
				type="text"
				name="email"
				class="code"
				style="min-width: 270px;"
				maxlength="100"
				value="$params['email']"
				cms:eval="value"
				/>
		</label>

		<label>
			<span><cms:text constant="label_web_site" module="shop"/></span>
			<input
				type="text"
				name="url"
				class="code"
				style="min-width: 270px;"
				maxlength="255"
				value="$params['url']"
				cms:eval="value"
				/>
		</label>

		<div class="button_bar">
			<button type="submit"><cms:text constant="save"/></button>
			<button type="reset"><cms:text constant="reset"/></button>
		</div>
	</form>
</document>
