	<nav class="window">
		<cms:var name="$params['link_new']"/>
		<cms:var name="$params['link_order']"/>
	</nav>

	<table class="list" data-height="400">
		<!-- Header -->
		<thead>
			<tr>
				<td style="width: 350px;">
					<cms:text constant="column_title" module="shop"/>
				</td>
				<td>
					<cms:text constant="column_options"/>
				</td>
			</tr>
		</thead>

		<!-- List Content -->
		<tbody>
			<cms:category_list/>
		</tbody>
	</table>
</document>
