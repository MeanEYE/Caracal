<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<form
		action="$params['form_action']"
		cms:eval="action"
		method="POST"
		>
		<label>
			<span><cms:text constant="label_text_id" module="shop"/></span>
			<input
				type="text"
				name="text_id"
				class="code ltr"
				maxlength="64"
				/>
		</label>
		<label>
			<span><cms:text constant="label_name" module="shop"/></span>
			<input
				type="text"
				name="name"
				class="multi-language"
				maxlength="255"
				/>
		</label>

		<fieldset>
			<legend>
				<input
					type="checkbox"
					name="has_limit"
					/>
				<cms:text constant="legend_coupon_limit" module="shop"/>
			</legend>

			<label>
				<span><cms:text constant="label_coupon_limit" module="shop"/></span>
				<input
					type="number"
					name="limit"
					value="0"
					min="0"
					/>
			</label>
		</fieldset>

		<fieldset>
			<legend>
				<input
					type="checkbox"
					name="has_timeout"
					/>
				<cms:text constant="legend_coupon_timeout" module="shop"/>
			</legend>

			<label>
				<span><cms:text constant="label_coupon_timeout" module="shop"/></span>
				<input
					type="datetime"
					name="timeout"
					placeholder="format_coupon_timeout"
					cms:constant="placeholder"
					/>
			</label>
		</fieldset>

		<div class="button_bar">
			<button type="submit"><cms:text constant="save"/></button>
			<button type="reset"><cms:text constant="reset"/></button>
			<button type="button" onclick="$params['cancel_action']" cms:eval="onclick">
				<cms:text constant="cancel"/>
			</button>
		</div>
	</form>
</document>
