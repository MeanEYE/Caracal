<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<tr>
		<td>
			<cms:var param="name" multilanguage="yes"/>
			<input
				type="hidden"
				name="'property_data_'.$params['index']"
				value="htmlspecialchars($params['data'])"
				cms:eval="name,value"
				/>
		</td>
		<td>
			<cms:var param="type"/>
		</td>
		<td class="options">
			<a onclick="javascript: Caracal.Shop.edit_property(this)"><cms:text constant="change"/></a>
			<a onclick="javascript: Caracal.Shop.delete_property(this)"><cms:text constant="delete"/></a>
		</td>
	</tr>
</document>
