<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">

		<div class="options">
			<cms:var name="$params['item_change']"/>
			<cms:var name="$params['item_delete']"/>
			<cms:var name="$params['item_set_default']"/>
		</div>

		<div
			class="image_holder"
			style="'background-image: url('.gallery::getThumbnailById($params['id'], null, 100).')'"
			cms:eval="style"
			/>

		<span class="title">
			<cms:var name="$params['title'][$language]"/>
		</span>
	</div>
</document>
