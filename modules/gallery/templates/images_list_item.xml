<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">
		<div class="options">
			<cms:var param="item_change"/>
			<cms:var param="item_delete"/>
			<cms:var param="item_set_default"/>
		</div>

		<div
			class="image_holder"
			style="'background-image: url('.gallery::getThumbnailById($params['id'], null, 100).')'"
			cms:eval="style"
			/>

		<span class="title">
			<cms:var param="title" multilanguage="yes"/>
		</span>
	</div>
</document>
