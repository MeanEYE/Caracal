<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<div class="list_item">
		<span class="column" style="width: 170px;">
			<cms:var param="name"/>
		</span>
		<span class="column" style="width: 70px;">
			<label>
				<input
					type="checkbox"
					name="'data_'.$params['name']"
					disabled="$params['has_data'] ? false : 'disabled'"
					cms:eval="name"
					cms:optional="disabled"
					/>
			</label>
		</span>
		<span class="column" style="width: 70px;">
			<label>
				<input
					type="checkbox"
					name="'settings_'.$params['name']"
					disabled="$params['has_settings'] ? false : 'disabled'"
					cms:eval="name"
					cms:optional="disabled"
					/>
			</label>
		</span>
	</div>
</document>
