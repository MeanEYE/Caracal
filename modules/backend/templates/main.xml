<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../../units/schema/template.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title" />
				<cms:raw text=" - "/>
				<cms:text constant="title" module="backend"/>
			</title>
			<cms:module name="head_tag" action="show"/>
		</head>

		<body>
			<!-- Sprite icons -->
			<cms:svg file="$params['sprite']" cms:eval="file"/>

			<header>
				<!-- Logo -->
				<div id="logo">
					<img
						src="_BASEURL.'/modules/backend/images/logo_text.svg'"
						alt="Caracal"
						cms:eval="src"
						/>
				</div>

				<!-- Window list -->
				<nav id="windows"/>

				<!-- Common links -->
				<nav id="common">
					<a href="https://github.com/Way2CU/Caracal/issues" target="_blank">
						<cms:text constant="menu_report_bug" module="backend"/>
					</a>
					<a href="http://webchat.freenode.net/?channels=%23caracal&amp;uio=OT10cnVlJjEwPXRydWUmMTE9MjM218" target="_blank">
						<cms:text constant="menu_help" module="backend"/>
					</a>
				</nav>

				<!-- Language menu -->
				<nav id="language">
					<cms:module
						name="language_menu"
						action="print"
						/>
				</nav>
			</header>

			<section>
				<cms:user>
					<!-- Main menu -->
					<nav id="main">
						<cms:menu_items/>
					</nav>
				</cms:user>

				<!-- Window container -->
				<div id="container"/>

				<cms:guest>
					<!-- Create login window -->
					<script type="text/javascript">
						$(document).ready(function() {
						Caracal.window_system.showLoginWindow();
						});
					</script>
				</cms:guest>
			</section>
		</body>
	</html>
</document>
